<Synthesis>
  <Hardware>
    <Component
      id="separator"
      type="separator" />
    <Component
      id="filter"
      type="filter" />
  </Hardware>

  <Reagents>
    <Reagent
      id="toluene" />
    <Reagent
      id="hydrochloric acid" />
    <Reagent
      id="glacial acetic acid" />
    <Reagent
      id="water" />
    <Reagent
      id="cold water" />
    <Reagent
      id="diethylamine" />
    <Reagent
      id="half-saturated aqueous sodium acetate" />
    <Reagent
      id="chloroacetyl chloride" />
  </Reagents>

  <Procedure>
    <Add
      reagent="glacial acetic acid"
      vessel="filter"
      volume="15 mL"
      port="top"
      stir="False" />
    <Add
      reagent="chloroacetyl chloride"
      vessel="filter"
      volume="2 mL"
      port="top"
      stir="True" />
    <Add
      reagent="half-saturated aqueous sodium acetate"
      vessel="filter"
      volume="25 mL"
      port="top"
      stir="True" />
    <HeatChillToTemp
      vessel="filter"
      temp="10°C" />
    <Add
      reagent="water"
      vessel="filter"
      volume="60 mL"
      port="top"
      stir="True" />
    <StopHeatChill
      vessel="filter" />
    <Stir
      vessel="filter"
      time="60 mins" />
    <Dry
      filter_vessel="filter" />
    <Add
      reagent="diethylamine"
      vessel="filter"
      volume="7.5 mL"
      port="top"
      stir="False" />
    <Add
      reagent="toluene"
      vessel="filter"
      volume="25 mL"
      port="top"
      stir="True" />
    <HeatChillToTemp
      vessel="filter"
      temp="25°C" />
    <Separate
      purpose="wash"
      from_vessel="filter"
      separation_vessel="separator"
      to_vessel="separator"
      solvent="water"
      product_bottom="False"
      to_port="top"
      solvent_volume="50 mL"
      n_separations="4" />
    <Separate
      purpose="extract"
      from_vessel="separator"
      separation_vessel="separator"
      to_vessel="filter"
      solvent="hydrochloric acid"
      to_port="top"
      solvent_volume="20 mL"
      n_separations="1" />
    <Filter
      filter_vessel="filter" />
    <WashFilterCake
      filter_vessel="filter"
      solvent="water"
      stir="solvent"
      repeat="1" />
  </Procedure>

</Synthesis>
